{% extends "_layout.twig" %}
{% block content %}
    <div class="hero hero--plain">
        <picture class="bg-image">
            <!--[if IE 9]><video style="display: none;"><![endif]-->
            <source srcset="{{ siteUrl }}src/img/img_hero-02.jpg" media="(min-width: 1000px)">
            <source srcset="{{ siteUrl }}src/img/img_hero-02.jpg" media="(min-width: 760px)">
            <!--[if IE 9]></video><![endif]-->
            <!--1440x390-->
            <img src="{{ siteUrl }}src/img/img_hero-02.jpg" alt=""/>
        </picture>
        <div class="wrapper wrapper--narrow hero__overlay text-center">
            <div class="flex-row">
                <div class="flex-col-tablet-8 flex-col-tablet-offset-2">
                    <h1 class="color-white type-xxl">{{ entry.bannerText }}</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- Main -->
    <main>
        <!-- Section: breadcrumbs -->
        <section class="section-breadcrumbs">
            <div class="wrapper wrapper--narrow">
                <div class="breadcrumbs">
                    <ul class="list-reset">$
                        <li>
                            <a href="{{ siteUrl }}">
                                <i class="icon-house"></i>
                            </a>
                        </li>
                        <li></li>
                        <li>{{ entry.title }}</li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- Section: breadcrumbs ./end-->
        <div class="wrapper wrapper--narrow">
            <div class="standard-inner">
                {{entry.title}}</h1>
        </div>
    </div>
    <hr class="separator">
    <div class="wrapper wrapper--narrow">
        <div class="flex-row">
            <div class="flex-col-desktop-7">
                <!-- Standard-Inner -->
                <div class="standard-inner pt-0x">
                    {{ entry.mainContent }}
                </div>
                <!-- Standard-Inner /.end-->
                <i class="icon-pin"></i>
                <p class="di mb-desktop-0x">Data Chemist -
                    <a href="#" class="link-clean">Dublin, Ireland</a>
                    (For Individual Job Position Pages)</p>
            </div>
            <!-- Aside -->
            {# <div class="flex-col-desktop-4 flex-col-desktop-offset-1">
                        <dl class="list-inline pt-2x pt-desktop-0x mb-4x mb-tablet-3x">
                            <dt>
                                <div class="icon__container">
                                    <i class="icon-user"></i>
                                </div>
                            </dt>
                            <dd>
                            {% if entry.author.firstName %}
                                Written by
                                <a href="#" class="link-clean">{{ entry.author.firstName }} {{ entry.author.lastName }}</a>
                            {% endif %}
                                <br> Posted {{ entry.postDate | date("d.m.Y") }}
                                <a href="#" class="link-clean"></a>
                            </dd>
                        </dl>
                        <h4 class="mb-desktop-2x">Share this page:</h4>
                        <ul class="list-social mb-4x">
                            <li>
                                <div class="icon__container icon__container--alt">
                                    <i class="icon-twitter"></i>
                                </div>
                            </li>
                            <li>
                                <div class="icon__container icon__container--alt">
                                    <i class="icon-facebook"></i>
                                </div>
                            </li>
                            <li>
                                <div class="icon__container icon__container--alt">
                                    <i class="icon-google"></i>
                                </div>
                            </li>
                            <li>
                                <div class="icon__container icon__container--alt">
                                    <i class="icon-linkedin"></i>
                                </div>
                            </li>
                        </ul>
                        <h4 class="mb-desktop-2x">Suggested Posts</h4>
                        <div class="flex-row pb-tablet-3x pb-desktop-0x">
                        {% for entry in craft.entries.section('blog').limit(2).all() %}
                            <div class="flex-col-tablet-6 flex-col-desktop-12">
                                <!--380x108-->
                                <img class="img-responsive mb-2x hidden-desktop-down" src="{{ siteUrl }}src/img/standard-inner/fan.jpg"
                                alt="fan-image">
                                <!--348x235-->
                                <img class="img-responsive mb-2x hidden-tablet-down hidden-desktop" src="{{ siteUrl }}src/img/standard-inner/fan-tab.jpg"
                                alt="fan-image">
                                <!--673x235-->
                                <img class="img-responsive mb-2x hidden-tablet" src="{{ siteUrl }}src/img/standard-inner/fan-mob-full.jpg"
                                alt="fan-image">
                                <p class="mb-1x">{category}</p>
                                <h3>{{ entry.title }}</h3>
                                <p class="mb-1x mb-desktop-2x">Posted March {{ entry.postDate | date("d.m.Y") }} <span class="dib--alt ml-25">by <a href="#" class="link-clean">{{ entry.author.firstName }} {{ entry.author.lastName }}</a></span></p>
                                <p class="mb-4x">
                                    <a href="{{ entry.uri }}" class="link-plain">Read more<i class="icon-arrow_right-01"></i></a>
                                </p>
                            </div>
                        {% endfor %}
                        </div>
                    </div> #}
            <!-- Aside /.end -->
        </div>
    </div>
    {% if entry.faq | length %}
        <section class="section section--light pt-tablet-6x pt-desktop-7x pb-tablet-5x pb-desktop-6x">
            <div class="wrapper wrapper--narrow">
                <div class="text-center">
                    <h2 class="mb-1x type-lg type-lg--alt">Frequently Asked Questions</h2>
                    <p class="mb-5x mb-desktop-4x">Browse our list of Frequently Asked Questions</p>
                </div>
                <div class="flex-row">
                    <div class="flex-col-desktop-8 flex-col-desktop-offset-2">
                        <!-- Accordion -->
                        <div class="collapse-wrapper accordion-wrapper accordion-wrapper--full accordion" data-breakpoint="0">
                            {% for block in entry.faq.all() %}
                                <div class="collapse accordion-block">
                                    <a role="button" class="collapse__toggle accordion__btn" href="#">
                                        <span class="accordion__icon">
                                            <span></span>
                                            <span></span></span><span>{{ block.question }}</span></a>
                                    <div class="collapse__content accordion__content">
                                        <p class="text-left mb-0x">{{block.answer}}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <!-- Accordion ./end-->
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
    <!-- Half-half -->
    <section class="mb-3x mb-tablet-2x mb-desktop-3x">
        <div class="wrapper wrapper--full">
            <div class="flex flex-row">
                <div class="flex-col-desktop-6 match-height">
